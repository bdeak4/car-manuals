<?xml version="1.0" encoding="UTF-8" standalone="no"?><procedure xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" appl="X35/JB1,JB3|X65/JB1,JB3" id="RPR-000192521" xml:lang="en" xsi:noNamespaceSchemaLocation="urn:ptc:names:renault:dita:xsd:procedure.xsd">
   <title translate="yes">front left-hand wheel driveshaft : removal - refitting</title>
   
   
   <procprolog translate="no">
      
      
      <status name="" translate="no"/>
      <critdates translate="no">
         <created date="" translate="no"/>
         <revised modified="" translate="no"/>
      </critdates>
      <procmetadata translate="no">
         <siename translate="no"/>
         <sieversion translate="no"/>
         <sietype translate="yes">Procedure</sietype>
         <sienumber translate="no"/>
         <domain translate="no"/>
         <company translate="no">RENAULT</company>
         
      </procmetadata>
   </procprolog>
   <procbody translate="no">
      <introduction translate="no">
         <noteR translate="no" type="caution">
            <para translate="yes">In order to prevent irreversible damage to the front hub bearing:</para>
            <ul translate="no">
               <li translate="yes">Do not loosen or tighten the driveshaft nut when the wheels are on the ground.</li>
               <li translate="yes">Do not place the vehicle with its wheels on the ground when the driveshaft has been loosened or removed.</li>
            </ul>
         </noteR>
         <para translate="yes"/>
      </introduction>
   </procbody>
   <procedure id="d1e24" otherprops="WF-SET='01,34'" translate="no">
      <title translate="yes">removal</title>
      <procbody translate="no"/>
      <procedure id="d1e28" translate="no">
         <title translate="yes">removal preparation operation</title>
         <procbody translate="no">
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Position the vehicle on a two-post lift<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3500084">
                        <linkdesc>vehicle : towing and lifting</linkdesc>
                        <linkvalue>GIEMR-002447</linkvalue>
                     </sieref>(02A, Lifting equipment).</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Remove:</para>
                  <ul translate="no">
                     <li translate="yes">the engine undertray bolts,</li>
                     <li translate="yes">the engine undertray.</li>
                  </ul>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Drain the gearbox oil<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3519638">
                        <linkdesc>gearbox oil : draining - refilling</linkdesc>
                        <linkvalue>GIEMR-001444</linkvalue>
                     </sieref>.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Remove the front left-hand wheel<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3532435">
                        <linkdesc>wheel : removal - refitting</linkdesc>
                        <linkvalue>GIEMR-001965</linkvalue>
                     </sieref>(35A, Wheels and tyres).</para>
               </procstep>
            </procsteps>
         </procbody>
      </procedure>
      <procedure id="d1e58" translate="no">
         <title translate="yes">operation for removal of part concerned</title>
         <procbody translate="no">
            <procsteps translate="no">
               <marklayer id="marklayer-d1e60" translate="no">
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.1" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">3</designation>
                  </mark>
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.2" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">2</designation>
                  </mark>
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.3" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">1</designation>
                  </mark>
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.4" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">4</designation>
                  </mark>
               </marklayer>
               <figure id="13-04-02-02-6-repair-13-01-01-03-01-37-1-50-1" translate="no">
                  
                  <image dimension="F2 (85x85) #" href="../MergedPictures/ILL-000020974_LAY-000056456.png" style="width: 85.0mm; height: 85.0mm;" translate="no"/>
               </figure>
               <procstep translate="no">
                  <para translate="yes">Detach the wiring from the wheel speed sensor<markref format="dita" href="#d1e58/13-04-02-02-6-repair-13-01-01-03-01-37-1-50-1" scope="local" translate="no" type="figure">1</markref>.</para>
               </procstep>
               <procstep translate="no">
                  <para translate="yes">Remove:</para>
                  <ul translate="no">
                     <li translate="yes">the hub nut<markref format="dita" href="#d1e58/13-04-02-02-6-repair-13-01-01-03-01-37-1-50-1" scope="local" translate="no" type="figure">2</markref>by immobilising the hub using the tool<toolref format="dita" href="x-wc://file=OS-000000153.xml" scope="external" translate="no" type="specifictool">
                           <linkdesc>Hub locking tool.</linkdesc>
                           <linkvalue>Rou. 604-01</linkvalue>
                        </toolref>,</li>
                     <li translate="yes">the track rod end nut<markref format="dita" href="#d1e58/13-04-02-02-6-repair-13-01-01-03-01-37-1-50-1" scope="local" translate="no" type="figure">3</markref>,</li>
                     <li translate="yes">the track rod end from the stub axle carrier using the tool<toolref format="dita" href="x-wc://file=OS-000000175.xml" scope="external" translate="no" type="specifictool">
                           <linkdesc>Ball joint extractor.</linkdesc>
                           <linkvalue>Tav. 476</linkvalue>
                        </toolref>.</li>
                  </ul>
               </procstep>
            </procsteps>
            <procsteps appl="X65/JB1,JB3" translate="no">
               <procstep translate="no">
                  <para translate="yes">Remove the front left-hand brake calliper support bolts<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3510096">
                        <linkdesc>front brake calliper mounting : removal - refitting</linkdesc>
                        <linkvalue>GIEMR-002125</linkvalue>
                     </sieref>(31A, Front axle components).</para>
               </procstep>
               <procstep translate="no">
                  <para translate="yes">Attach the brake calliper to the shock absorber spring to prevent straining the hose.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Remove the shock absorber base bolts<markref format="dita" href="#d1e58/13-04-02-02-6-repair-13-01-01-03-01-37-1-50-1" scope="local" translate="no" type="figure">4</markref>.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Push the front left-hand driveshaft back from the stub axle carrier by pivoting the stub axle carrier.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <marklayer id="marklayer-d1e141" translate="no">
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.5" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">5</designation>
                  </mark>
               </marklayer>
               <figure id="13-02-02-68-repair-13-01-01-03-01-37-1-50-2" translate="no">
                  
                  <image dimension="F2 (85x85) #" href="../MergedPictures/ILL-000034771_LAY-000056457.png" style="width: 85.0mm; height: 85.0mm;" translate="no"/>
               </figure>
               <procstep translate="no">
                  <para translate="yes">Remove:</para>
                  <ul translate="no">
                     <li translate="yes">the bolts<markref format="dita" href="#d1e58/13-02-02-68-repair-13-01-01-03-01-37-1-50-2" scope="local" translate="no" type="figure">5</markref>securing the front left-hand driveshaft to the gearbox,</li>
                     <li translate="yes">the front left-hand driveshaft.</li>
                  </ul>
               </procstep>
            </procsteps>
         </procbody>
      </procedure>
   </procedure>
   <procedure id="d1e166" otherprops="WF-SET='01,61'" translate="no">
      <title translate="yes">refitting</title>
      <procbody translate="no"/>
      <procedure id="d1e170" translate="no">
         <title translate="yes">refitting operation for part concerned</title>
         <procbody translate="no">
            <procsteps translate="no">
               <marklayer id="marklayer-d1e172" translate="no">
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.6" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">9</designation>
                  </mark>
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.7" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">8</designation>
                  </mark>
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.8" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">7</designation>
                  </mark>
                  <mark id="MARK.REPAIR-13X01X01X03-01X37-1-50.9" translate="no">
                     <mcomponent translate="no">
                        <label translate="no"/>
                     </mcomponent>
                     <designation translate="no">6</designation>
                  </mark>
               </marklayer>
               <figure id="13-01-5-repair-13-01-01-03-01-37-1-50-3" translate="no">
                  <title translate="yes">Special notes on the front left-hand driveshaft</title>
                  
                  <image dimension="F2 (85x85) #" href="../MergedPictures/ILL-000005830_LAY-000056458.png" style="width: 85.0mm; height: 85.0mm;" translate="no"/>
                  <caption translate="no">
                     <sthead translate="no">
                        <stentry translate="yes">N repere</stentry>
                        <stentry translate="yes">Designation</stentry>
                        <stentry translate="yes">Informations</stentry>
                        <stentry translate="yes">Renvois</stentry>
                     </sthead>
                     <strow translate="no">
                        <stentry translate="yes">
                           <para translate="yes">
                              <markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">6</markref>
                           </para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes">Front left-hand driveshaft</para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                     </strow>
                     <strow translate="no">
                        <stentry translate="yes">
                           <para translate="yes">
                              <markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">7</markref>
                           </para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes">Bearing gaiter (gearbox side)</para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                     </strow>
                     <strow translate="no">
                        <stentry translate="yes">
                           <para translate="yes">
                              <markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>
                           </para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes">Gaiter flange</para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                     </strow>
                     <strow translate="no">
                        <stentry translate="yes">
                           <para translate="yes">
                              <markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">9</markref>
                           </para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes">Gaiter lip seal (seal on the gearbox side)</para>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                        <stentry translate="yes">
                           <para translate="yes"/>
                        </stentry>
                     </strow>
                  </caption>
               </figure>
               <procstep translate="no">
                  <para translate="yes">The seal (gearbox side) is made by pushing the gaiter lip<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">9</markref>into its housing on the gearbox, moving the flange<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>.</para>
                  <noteR translate="no" type="note">
                     <para translate="yes">Note:</para>
                     <para translate="yes">To provide a good seal when refitting the gaiter to the gearbox, the flange<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>must be fitted to the gaiter<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">7</markref>to act as a shoulder to the lip seal<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">9</markref>and to correctly seal its mating face on the gearbox.</para>
                  </noteR>
               </procstep>
               <procstep translate="no">
                  <para translate="yes">Wipe oil from:</para>
                  <ul translate="no">
                     <li translate="yes">the flange<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>,</li>
                     <li translate="yes">between the flange and the gaiter,</li>
                     <li translate="yes">the seal lip<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">9</markref>,</li>
                     <li translate="yes">the face of the lip on the gearbox.</li>
                  </ul>
               </procstep>
               <procstep translate="no">
                  <para translate="yes">Refit the driveshaft on the gearbox side (this operation requires two people):</para>
                  <ul translate="no">
                     <li translate="yes">
                        <para translate="yes">Person 1:</para>
                        <ul translate="no">
                           <li translate="yes">position the driveshaft at the differential input,</li>
                           <li translate="yes">fit the flange<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>on the gaiter<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">7</markref>,</li>
                           <li translate="yes">fit the driveshaft into the gearbox whilst keeping the flange<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>on the gaiter,</li>
                           <li translate="yes">push the flange<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>to insert the gaiter lip<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">9</markref>in its housing (do not pinch the gaiter<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">7</markref>).</li>
                        </ul>
                     </li>
                     <li translate="yes">
                        <para translate="yes">Person 2:</para>
                        <ul translate="no">
                           <li translate="yes">pretighten the flange bolts<markref format="dita" href="#d1e170/13-01-5-repair-13-01-01-03-01-37-1-50-3" scope="local" translate="no" type="figure">8</markref>but do not tighten fully (the flange should still be loose).</li>
                        </ul>
                     </li>
                     <li translate="yes">
                        <para translate="yes">Person 1:</para>
                        <ul translate="no">
                           <li translate="yes">keep the driveshaft as horizontal as possible (with respect to the differential).</li>
                        </ul>
                     </li>
                     <li translate="yes">
                        <para translate="yes">Person 2:</para>
                        <ul translate="no">
                           <li translate="yes">Torque tighten the<torque translate="no">
                                 <torquedobject translate="yes">flange bolts</torquedobject>
                                 <technicalvalue translate="no">
                                    <value translate="yes">21 N.m</value>
                                 </technicalvalue>
                              </torque>.</li>
                        </ul>
                     </li>
                  </ul>
                  <noteR translate="no" type="note">
                     <para translate="yes">Note:</para>
                     <para translate="yes">The driveshaft must fit freely into the stub axle carrier until it protrudes enough for the hub nut to be fitted.</para>
                  </noteR>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Fit the front left-hand driveshaft into the stub axle carrier.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Refit the bolts to the shock absorber base.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Torque tighten the<torque translate="no">
                        <torquedobject translate="yes">shock absorber base bolts</torquedobject>
                        <technicalvalue translate="no">
                           <value translate="yes">105 N.m</value>
                        </technicalvalue>
                     </torque>.</para>
               </procstep>
            </procsteps>
            <procsteps appl="X65/JB1,JB3" translate="no">
               <procstep translate="no">
                  <para translate="yes">Refit the front left-hand brake calliper support<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3510096">
                        <linkdesc>front brake calliper mounting : removal - refitting</linkdesc>
                        <linkvalue>GIEMR-002125</linkvalue>
                     </sieref>.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Position the track rod.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Torque tighten the<torque translate="no">
                        <torquedobject translate="yes">track rod end nut</torquedobject>
                        <technicalvalue translate="no">
                           <value translate="yes">37 N.m</value>
                        </technicalvalue>
                     </torque>.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Refit the hub nut.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Torque tighten the<torque translate="no">
                        <torquedobject translate="yes">hub nut</torquedobject>
                        <technicalvalue translate="no">
                           <value translate="yes">280 N.m</value>
                        </technicalvalue>
                     </torque>using the tool<toolref format="dita" href="x-wc://file=OS-000000153.xml" scope="external" translate="no" type="specifictool">
                        <linkdesc>Hub locking tool.</linkdesc>
                        <linkvalue>Rou. 604-01</linkvalue>
                     </toolref>.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Clip on the wheel speed sensor wiring harness.</para>
               </procstep>
            </procsteps>
         </procbody>
      </procedure>
      <procedure id="d1e383" translate="no">
         <title translate="yes">final operation</title>
         <procbody translate="no">
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Refit the front left-hand wheel<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3532435">
                        <linkdesc>wheel : removal - refitting</linkdesc>
                        <linkvalue>GIEMR-001965</linkvalue>
                     </sieref>(35A, Wheels and tyres).</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Top up the gearbox<sieref href="x-wc://gie=OR:wt.part.WTPartMaster:3519638">
                        <linkdesc>gearbox oil : draining - refilling</linkdesc>
                        <linkvalue>GIEMR-001444</linkvalue>
                     </sieref>.</para>
               </procstep>
            </procsteps>
            <procsteps translate="no">
               <procstep translate="no">
                  <para translate="yes">Refit the engine undertray.</para>
               </procstep>
            </procsteps>
         </procbody>
      </procedure>
   </procedure>
</procedure>